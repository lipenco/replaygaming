class PokerTable
  VARIATIONS = [:royal, :holdem, :omaha].freeze
  TYPES = [:ring, :mtt].freeze
  BETTING_TYPES = [:pl, :nl, :fl].freeze

  def initialize(variation, type, betting_type)
    validate(variation, type, betting_type)
  end

  private

  def validate
    raise "Invalid variation" unless VARIATIONS.include?(variation)
    raise "Invalid type" unless TYPES.include(type)
    raise "Invatlid betting type" unless BETTING_TYPES.include?(betting_type)
  end

end

Class BettingType
  max_bet
   raise 'unimplemented'
  end
end

Class FL < BettingType
def name
  "FLfjaslkdjfals"
  end

  def max_bet
    "233"
    end
    end